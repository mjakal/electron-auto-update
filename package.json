{
  "name": "electron-updater-example",
  "version": "0.1.0",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": {
    "name": "Martin Jakal",
    "email": "app@example.com",
    "url": "https://example.com/"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -l",
    "serve": "http-server wwwroot/ -p 8080"
  },
  "dependencies": {
    "electron-log": "^4.3.0",
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "http-server": "^0.12.3"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080/"
      }
    ],
    "appId": "com.github.martin.electronupdaterexample",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "icons/icons",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Some Company - Stored in cert file",
      "certificateFile": "./certs/some_file.pfx",
      "certificatePassword": "some_password"
    }
  }
}
